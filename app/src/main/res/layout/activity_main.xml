<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="Сокращение ссылок"
        android:textAlignment="center"
        android:textColor="#ACA4A4"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/short_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/link"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Текст полной ссылки"
        android:inputType="textWebEditText"
        android:textColor="#ACA4A4"
        android:textColorHint="#ACA4A4"
        app:layout_constraintBottom_toTopOf="@+id/short_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/short_link"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="344dp"
        android:ems="10"
        android:hint="Текст сокращенной ссылки"
        android:inputType="text"
        android:textColor="#ACA4A4"
        android:textColorHint="#ACA4A4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/link" />

    <Button
        android:id="@+id/btn"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="265dp"
        android:background="#E61414"
        android:text="Добавить"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/short_link"
        app:layout_constraintTop_toBottomOf="@+id/short_link"
        app:layout_constraintVertical_bias="0.342" />

    <ListView
        android:id="@+id/list_of_short_link"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn" />

</androidx.constraintlayout.widget.ConstraintLayout>